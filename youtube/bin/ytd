#!/bin/sh

OUTPATH=~/Movies/yt

mkdir -p $OUTPATH 2>>/dev/null
yt-dlp --format mp4 --sponsorblock-remove sponsor,selfpromo --mark-watched --output "$OUTPATH/%(title)s-%(id)s.%(ext)s" --download-archive "~/.vimwiki/logged/youtube_watched.txt" --cookies "$OUTPATH/cookies.txt" --exec 'open -a "QuickTime Player" {}' "$*"
